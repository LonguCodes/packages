{
  "name": "package-builder",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/package-builder/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/package-builder",
        "main": "packages/package-builder/src/index.ts",
        "tsConfig": "packages/package-builder/tsconfig.lib.json",
        "assets": [
          "packages/package-builder/*.md",
          {
            "input": "./packages/package-builder/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/package-builder/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/package-builder",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/package-builder",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/package-builder/**/*.ts",
          "packages/package-builder/generators.json",
          "packages/package-builder/executors.json",
          "packages/package-builder/package.json"
        ]
      }
    },
    "publish": {
      "executor": "@longucodes/package-builder:build-and-publish",
      "options": {
        "publishCli": "yarn",
        "publishArgs": [
          {
            "name": "access",
            "value": "public"
          },
          {
            "name": "no-git-tag-version"
          },
          {
            "name": "no-commit-hooks"
          }
        ]
      }
    }
  },
  "tags": []
}
